.chat-main
  .chat-main__group
    .chat-main__name
      .chat-main__name--list
        = @group.name
      .chat-main__name--member
        - @group.group_users.each do |group|
          = "#{group.user.name}さん"
  
    .chat-main__edit
      = link_to  edit_group_path(@group),class: "chat-main__edit-group" do
        = "Edit"

  .chat-main__message
    = render @messages


  .chat-main__form
    .comment
      = form_for [@group, @message] do |f|
        .new_message
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'ctat-main__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'
      

        